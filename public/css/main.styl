@import "nib";
@import "boilerplate";

body {
  	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif	
	padding: 2em;
}

.title {
	text-align: left;
}

#console {
	width: 90%;
	height: 30em;
	padding: 1em;
	margin-right: auto;
	margin-left: auto;
	overflow-y: scroll;
	overflow-x: hidden;
	border: 2px solid #105CB6;
	border-radius: 1em;
	box-shadow: 0.5em 0.5em 0.3em #333;
	& > p {
		margin-bottom: 0.1em;
		margin-top: 0.1em;
		-webkit-margin-after: 0;
		-webkit-margin-before: 0;
	}
}

.output {
	color: #999;
	font-style: italic;
	.command {
		color: #555;
	}
}

.command, .from {
	font-weight: bold;
	margin-right: 1em;
}

$chatWidth = 25em

#chat,
#nickname,
#messages,
#connecting {
  width: $chatWidth;
}
#chat {
  position: relative;
  border: 1px solid #ccc;
}
#nickname,
#connecting {
  position: absolute;
  /* height: 29em; */
  z-index: 100;
  left: 0;
  top: 0;
  background: #fff;
  text-align: center;
  color: #666;
  display: block;
}
#nickname {
	display: none;
}
#nickname .wrap,
#connecting .wrap {
  padding-top: 5em;
}
#nickname input {
  border: 1px solid #ccc;
  padding: 0.7em;
}
#nickname input:focus {
  border-color: #999;
  outline: 0;
}
#nickname #nickname-err, #connect-err{
  color: #8b0000;
  font-size: 0.8em;
  font-size: 0.8rem;
  visibility: hidden;
}
.connected #connecting {
  display: none;
}
.connected #nickname {
	display: block;
}
.nicknameset #nickname {
  display: none;
}
#messages {
  height: 20em;
  background: #eee;
}
#messages em {
  text-shadow: 0 1px 0 #fff;
  color: #999;
}
#messages p {
  padding: 0;
  margin: 0;
  font: 12px Helvetica, Arial;
  padding: 5px 10px;
}
#messages p:nth-child(even) {
  background: #fafafa;
}
#messages #nicknames {
  background: #ccc;
  padding: 2px 4px 4px;
  font: 11px Helvetica;
}
#messages #nicknames span {
  color: #000;
}
#messages #nicknames b {
  display: inline-block;
  color: #fff;
  background: #999;
  padding: 0.25em 0.5em;
  margin-right: 5px;
  border-radius: 0.75em;
  text-shadow: 0 1px 0 #666;
}
#messages #lines {
  height: 24em;
  overflow: auto;
  overflow-x: hidden;
  overflow-y: auto;
}
#messages #lines::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}
#messages #lines::-webkit-scrollbar-button:start:decrement,
#messages #lines ::-webkit-scrollbar-button:end:increment {
  display: block;
  height: 10px;
}
#messages #lines::-webkit-scrollbar-button:vertical:increment {
  background-color: #fff;
}
#messages #lines::-webkit-scrollbar-track-piece {
  background-color: #fff;
  -webkit-border-radius: 3px;
}
#messages #lines::-webkit-scrollbar-thumb:vertical {
  height: 50px;
  background-color: #ccc;
  -webkit-border-radius: 3px;
}
#messages #lines::-webkit-scrollbar-thumb:horizontal {
  width: 50px;
  background-color: #fff;
  -webkit-border-radius: 3px;
}
#send-message {
  background: #fff;
  position: relative;
  visibility: hidden;
}

.nicknameset > #send-message {
	visibility: visible;
}

#send-message input {
  border: none;
  height: 30px;
  padding: 0 10px;
  line-height: 30px;
  vertical-align: middle;
  width: ($chatWidth - 2em);
}
#send-message input:focus {
  outline: 0;
}
#send-message button {
  position: absolute;
  top: 5px;
  right: 5px;
}
button {
  margin: 0;
  user-select: none;
  display: inline-block;
  text-decoration: none;
  background: #43a1f7;
  background: linear-gradient(top, #43a1f7 0%, #377ad0 100%);
  border: 1px solid #2e70c4;
  border-radius: 1em;
  color: #fff;
  font-family: "lucida grande", sans-serif;
  font-size: 11px;
  font-size: 0.75em;
  font-size: 0.75rem;
  font-weight: normal;
  line-height: 1;
  padding: 3px 10px 5px 10px;
  text-align: center;
  text-shadow: 0 -1px 1px #2d6dc0;
}
button:hover,
button.hover {
  background: darker;
  background: linear-gradient(top, #43a1f7 0%, #2e70c4 100%);
  border: 1px solid #2e70c4;
  cursor: pointer;
  text-shadow: 0 -1px 1px #2c6bbb;
}
button:active,
button.active {
  background: #2e70c4;
  border: 1px solid #2e70c4;
  border-bottom: 1px solid #2861aa;
  text-shadow: 0 -1px 1px #2b67b5;
}
button:focus,
button.focus {
  outline: none;
  box-shadow: 0 1px 0 0 rgba(255,255,255,0.4), 0 0 4px 0 #377ad0;
}

@media screen and (min-width: 40em) {
	#chat,
	#nickname,
	#messages,
	#connecting {
  		width: 40em;
	}
}
